<div class="ui container">
    <h1><%= @litter.name %></h1>
    
    <table class="ui celled table">
        <thead>
            <th>Name</th>
            <th>Birthday</th>
            <th>Parents</th>
            <th>Number of Boys</th>
            <th>Number of Girls</th>
        </thead>

        <tbody>
            <td><%= @litter.name %></td>
            <td><%= @litter.birthday %></td>
            <td><%= link_to @parents[0].name, parent_path(@parents[0]) %>, 
                <%= link_to @parents[1].name, parent_path(@parents[1]) %></td>
            <td><%= @boys_count %></td>
            <td><%= @girls_count %></td>
        </tbody>
    </table>

    <h2> Associated Puppies </h2>

    <table class="ui celled table">
        <thead>
            <th>ID</th>
            <th>Gender</th>
            <th>Breed</th>
            <th>Status</th>
        </thead>
    <% @puppers.each do |pupper| %>
        <tbody>
            <td><%= pupper.id %></td>
            <td><%= pupper.gender %></td>
            <td><%= pupper.litter.breed %></td>
            <% if pupper.sold? %>
                <td>Sold</td>
            <% else %>
                <td>Unsold</td>
            <% end %>
        </tbody>
    <% end %>
    </table>

</div>